<section>
    <div class="container mt-5">
        <div class="row m-auto">

            {{#each products}}
            <div class="col col-md-4 col-xl-3 col-sm-6 mt-1 p-3">
                <div class="card" style="width: 14rem; height: 26rem;">
                    <img class="card-img-top mt-1 Image" src="/product-images/{{this._id}}.jpg" alt="Card image cap"
                        style="height: 10rem;">
                    <div class="card-body">
                        <h5 class="card-title">
                            {{this.Name}}
                        </h5>
                        <p class="card-text">
                            {{this.Description}}
                        </p>
                        <p class="card-text">
                          <b>Rs.{{this.Price}}â‚¹</b>  
                        </p>


                        {{!-- <a href="/add-to-cart/{{this._id}}" class="btn btn-primary"></a> --}}
                        <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">ADD TO CART</button>
                 

                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

</section>
{{!-- <script src="/javscripts/script.js"></script> --}}
<style>
    .card{
        border-radius: 10px;
        overflow: hidden;
        transition: 990ms ease;
       /* box-shadow: 1px 5px 20px 1px rgb(138, 129, 129);*/
    }
    .card:hover{
        box-shadow: 1px 5px 20px 1px rgb(138, 129, 129);
        width: 17rem;
        height: 29rem;
    }
    @media(max-width:541px){
        .row{
            width: 15rem;
            margin: auto;
        }
    }
    
</style>